<%- include('partials/header') -%>

<h1>Compose</h1>
 
  <form action="/compose" method="POST">
    <div class="form-group">
    <!-- TITLE INPUT -->
      <label id="basic-addon1">Title</label>
      <input name="title" type="text" class="form-control" aria-describedby="basic-addon1"/>
<!-- POST INPUT -->
      <label id="basic-addon1">Post</label>
      <textarea name="post" type="text" class="form-control" aria-describedby="basic-addon1" rows="8" cols="80"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="submitPost" value="newPost">Publish</button>
  </form>


